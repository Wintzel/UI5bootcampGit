<mvc:View controllerName="sap.ui.bootcampWebapp.controller.App" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc">
	<VBox>
		<Text text="UserName"/>
		<Input value="{/field/username}" description="Hello {/field/username}"
		 valueLiveUpdate="true" type="Text" width="20%" id="username"/>
		<Text text="Password"/>
		<Input id="password" type="Password" width="20%"/>
		<Button text="{i18n>loginButtonText}" press="onLoginPress"/>
	</VBox>	
</mvc:View>